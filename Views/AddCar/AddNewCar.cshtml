@model MechAppProject.Models.CarModel
@{
    ViewBag.Title = "AddNewCar";
}

<h2>Add Car</h2>

<fieldset>
    <legend>
        Dodawanie pojazdu
    </legend>
    @using (Html.BeginForm("AddNewCar", "AddCar", FormMethod.Post))
    {
<table>
    <tr>
        <td>
            @Html.LabelFor(model => model.Brand)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Brand)
        </td>
    </tr>

    <tr>
        <td></td>
        <td colspan="2">
            @Html.ValidationMessageFor(model => model.Brand, null, new { @class = "text text-danger" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.Model)
        </td>
        <td>
            @Html.TextBoxFor(model => model.Model)
        </td>
    </tr>

    <tr>
        <td></td>
        <td colspan="2">
            @Html.ValidationMessageFor(model => model.Model, null, new { @class = "text text-danger" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.LabelFor(model => model.EngineType)
        </td>
        <td>
            @Html.TextBoxFor(model => model.EngineType)
        </td>
    </tr>

    <tr>
        <td></td>
        <td colspan="2">
            @Html.ValidationMessageFor(model => model.EngineType, null, new { @class = "text text-danger" })
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <table>
                <tr>
                    <td>
                        <input type="submit" value="Dodaj" />
                    </td>
                    <td>
                        <input type="reset" value="Wyczyść" />
                    </td>

                </tr>
            </table>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <label class="label-success">@ViewBag.SuccessMessage</label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <label class="label-danger">@ViewBag.DuplicateCar</label>
                </div>
            </div>
        </td>
    </tr>

</table>
    }
</fieldset>

